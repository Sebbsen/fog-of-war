function on_input(self, action_id, action)
	if action_id == hash("touch") and action.pressed then
		local back = gui.get_node("back")
		if gui.pick_node(back, action.x, action.y) then		--wenn auf "Back"-Button geklickt wird
			msg.post("menu:/main", "show_main_menu")		--zeigt das Hauptmen√º
			msg.post("menu:/loader#loader", "unload_level")	--Sagt dem loader, er soll das Level unloade
		end
	end
end

