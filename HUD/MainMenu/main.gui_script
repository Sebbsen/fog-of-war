function on_message(self, message_id, message, sender)
	if message_id == hash("show_main_menu") then		--Aktiviert und zeigt Hauptmenü
		msg.post("#", "enable")
		self.active = true
	elseif message_id == hash("hide_main_menu") then	--Deaktiviert und schließt Hauptmenü
		msg.post("#", "disable")
		self.active = false
	end
	
end

function on_input(self, action_id, action)
	if action_id == hash("touch") and action.pressed and self.active then
				
		if gui.pick_node(self.play, action.x, action.y) then --Wenn Start-Knopf gedrückt wird
			print("play pressed")
			msg.post("/loader#loader", "load_level")		--Wird das Level geladen
			msg.post("#", "hide_main_menu")					--und das Hauptmenü deaktiviert
			
		elseif gui.pick_node(self.help, action.x, action.y) then	--wenn Hilfe-Knopf gedrückt wird
			print("help pressed")
			if self.instruct == false then
				self.instruct = true
				gui.set_color(self.helpbox, vmath.vector4(0, 0, 0, 1))
			elseif self.instruct == true then
				self.instruct = false
				gui.set_color(self.helpbox, vmath.vector4(0, 0, 0, 0))
			end
			
		end
	end
end

