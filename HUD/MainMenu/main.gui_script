function init(self)
	self.play = gui.get_node("play")
	self.help = gui.get_node("help")
	self.helpbox = gui.get_node("instructions")
	self.instruct = false
	gui.set_color(self.helpbox, vmath.vector4(0, 0, 0, 0))
	
	msg.post(".", "acquire_input_focus")
	msg.post("#", "show_main_menu")
	self.active = false
	print("activated")
	
end

